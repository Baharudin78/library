<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/bg_shape_retangle_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.getstarted_white">
        <item name="android:background">@drawable/bg_shape_white</item>
        <item name="android:paddingStart">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">Masuk</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:paddingEnd">100dp</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/bg_shape_retangle_blue</item>
        <item name="android:paddingStart">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">Daftar</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:paddingEnd">100dp</item>
    </style>

</resources>
